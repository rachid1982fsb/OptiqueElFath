<p id="notice"><%= notice %></p>



<fieldset>
<legend><h1>All Frams</h1></legend>


<div class="row">
    <% @items.each do |item|%>
      <div class="col-sm-3">
            <h3> Name: <%= link_to item.name,  item_path(item) %></h3>
            <p> <%= link_to image_tag(item.image, size: "200x200"), item_path(item), class:"rounded"%></p> 
            Price: <%= item.price_out %> $ <br><br>
         </div>
        <% end %>
</div>
</fieldset>
<%= link_to 'New Item', new_item_path %>


<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <% if model_signed_in? %>
      <th>Cost in</th>
      <% end %>
      <th>Price out</th>
      <th>Color</th>
      <th>D1</th>
      <th>D2</th>
      <th>D3</th>
      <th>D4</th>
      <th>Quantity</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <% if model_signed_in? %>
        <td><%= item.cost_in %></td>
        <% end %>
        <td><%= item.price_out %></td>
        <td><%= item.color %></td>
        <td><%= item.d1 %></td>
        <td><%= item.d2 %></td>
        <td><%= item.d3 %></td>
        <td><%= item.d4 %></td>
        <td><%= item.quantity %></td>
        <td><%= item.comment %></td>
        <td><%= link_to 'Show', item %></td>
        <% if model_signed_in? %>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>


